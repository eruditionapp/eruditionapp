<div class="page page-login">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">

        <h3 class="signup-text">Forgot your password?</h3>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal signup-form'}) do |f| %>
          <%= devise_error_messages! %>
          
          <div class="form-group">
            <div class="col-xs-12">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            </div>
          </div>
          
          <div class="form-group">
            <div class="col-xs-12">
              <%= f.submit 'Send me reset password instructions', class: 'btn btn-default btn-block' %>
            </div>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>