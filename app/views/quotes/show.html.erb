<div class="page page-dashboard">
  <div class="wrapper wrapper--light">
    <div class="container">
      <div class="pagehead">
        <div class="row">
          <div class="col-sm-6">
            <ol class="breadcrumb">
              <li><%= link_to 'Decks', decks_path %></li>
              <li><%= link_to @deck.title, deck_path(@deck) %></li>
              <li><%= link_to 'Quotes', deck_quotes_path(@deck) %></li>
              <li class="active">Quote <%= @quote.id %></li>
            </ol>
          </div>
          <div class="col-sm-6">
            <div class="btn-group pull-right">
              <%= link_to 'Edit', edit_deck_quote_path, class: 'btn btn-brand' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-7"> 
        <div class="panel panel-default">
          <div class="panel-body">
            <%= @quote.content %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
