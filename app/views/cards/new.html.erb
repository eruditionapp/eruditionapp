<h2>Flashcard</h2>
<%= form_for [@deck, @card] do |f| %>
  <%= render 'shared/errors', resource: @card %>

  <%= f.hidden_field :card_type, value: 'flashcard' %>

  <%= f.label :difficulty %>
  <%= f.select :difficulty, collection: Card::DIFFICULTY_LEVELS.map {|key,value| ["#{value}. #{key.titleize}",value]} %>

  <%= f.label :quote_id %>
  <%= f.select :quote_id, collection: @quotes.map(&:id) %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit "Create" %>
<% end %>
