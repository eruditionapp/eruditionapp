<% provide(:page_class, 'page-dashboard') %>
<div class="wrapper">
  <div class="container">
    <div class="pagehead">
      <div class="row">
        <div class="col-sm-6">
          <ol class="breadcrumb">
            <li><%= link_to 'Decks', decks_path %></li>
            <li><%= link_to @deck.title, deck_path(@deck) %></li>
            <li class="active">Card <%= @card.id %></li>
          </ol>
        </div>
        <div class="col-sm-6">
          <div class="btn-group pull-right">
            <%= link_to 'Cancel', deck_path(@deck), class: 'btn btn-default' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="admin-summary">
    <div class="row">
      <div class="col-xs-12">
        <div class="well">
          <table class="table table-condensed table-striped">
            <tbody>
              <tr>
                <th><span class="glyphicon glyphicon-book" aria-hidden="true"></span>Card Id</th>
                <td><%= @card.id %></td>
                <td></td>
              </tr>
              <tr>
                <th><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Creation Date</th>
                <td><%= @card.created_at.strftime('%b %d, %Y') %></td>
                <td></td>
              </tr>
              <tr>
                <th><span class="glyphicon glyphicon-tags" aria-hidden="true"></span>Question Type</th>
                <td><%= @card.card_type.humanize %></td>
                <td></td>
              </tr>
              <tr>
                <th><span class="glyphicon glyphicon-signal" aria-hidden="true"></span>Difficulty</th>
                <td><%= @card.difficulty %></td>
                <td class="card-difficulty">
                  <div class="progress progress-difficulty">
                    <div class="progress-bar progress-bar-difficulty" style="width:<%= @card.difficulty.fdiv(10) * 100 %>%"></div>
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7">

      <%= render 'card_form' %>

    </div>
  </div>
</div>
