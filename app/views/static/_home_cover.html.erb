<div class="cover">
  <div class="cover-image"></div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-7">
        <div class="cover-text">
          <h1 class="cover-text__top">Discover the greatest works of art ever painted.</h1>
          <h2 class="cover-text__bottom">Supercharge your study session with curated lesson plans designed to help you learn things faster and remember them even longer.</h2>
        </div>
      </div>
      <div class="visible-xs col-xs-12 signup-form">
        <div class="form-group">
          <%= link_to 'Signup for Free', new_user_registration_path, class: 'btn btn-default btn-block' %>
        </div>
        <div calss="form-group">
          <div class="hr-label">
            <span class="hr-label__text">or</span>
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default btn-block">Signup for Free with Facebook</button>
        </div>
      </div>
      <div class="hidden-xs col-xs-12 col-sm-5">
        <h3 class="signup-text">Sign up</h3>
        <form class="form-horizontal signup-form cover-signup-form">
          <div class="form-group">
            <div class="col-xs-12">
              <input class="form-control" placeholder="Full Name">
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12 col-md-6">
              <input type="email" class="form-control" placeholder="Email">
            </div>
            <div class="col-xs-12 col-md-6">
              <input type="password" class="form-control" placeholder="Password">
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <div class="checkbox">
                <label>
                  <input type="checkbox"> I agree to the <%= link_to 'Erudition Terms', root_path, class: 'privacy-link' %>
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <button type="submit" class="btn btn-default btn-block">Signup for Free</button>
            </div>
          </div>
          <div calss="form-group">
            <div class="col-xs-12 hr-label">
              <span class="hr-label__text">or</span>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12">
              <button type="submit" class="btn btn-default btn-block">Signup for Free with Facebook</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
